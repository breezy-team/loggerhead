<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:tal="http://xml.zope.org/namespaces/tal">
  <title>
    bazaar changes for <tal:branch-name content="branch/friendly_name">branch name</tal:branch-name>
  </title>
  <updated tal:content="updated">${updated}</updated>
  <id tal:content="python:branch.url(['atom'])">url</id>
  <link rel="self" tal:attributes="href python:branch.url([''])" />

  <entry tal:repeat="entry changes">
    <title>
      <tal:r content="entry/revno" />: <tal:r content="entry/short_comment" />
    </title>
    <updated>
      <tal:r content="python:entry.date.isoformat() + 'Z'" />
    </updated>
    <id>
      <tal:r content="python:branch.url(['revision', entry.revid ])" />
    </id>
    <author>
      <name>
        <tal:r content="python:util.hide_email(entry.author)" />
      </name>
    </author>
    <content type="text">
      <tal:r content="entry/comment" />
    </content>
    <link rel="alternate"
          tal:attributes="href python:branch.url(['revision', entry.revid ])" />
  </entry>
</feed>
